<!DOCTYPE html>
<html>
<head>
  <title>EWB-UCF | Engineers Without Borders</title> 
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<%#= render "static_pages/nav" %>

	<h6 class="row <%= current_page?('/') ? 'login1' : 'login2'%>">
		<% if logged_in? %>
		  Welcome, <%= link_to current_user.username, user_path(current_user), class: "username"%>! 

            <% if current_page?('/') %>
                <br><br>
            <% end %>

		  <%= link_to "Become a Member!", edit_user_path(current_user) %>  
		  <%= link_to "Logout", logout_path %>

		<% else %>
		  <%= link_to "Login", login_path %> or <%= link_to "Sign Up", new_user_path %>
		<% end %>
		<br/>
	</h6>

    <%- flash.each do |key, msg| -%>
		<div id="<%= key %>">
		<p><%= msg %></p>
		<div class=""></div>
		</div>
	<%- end -%>

	<%#= link_to "Donate!", new_project_donation_path('nil') %>

    <%= render "static_pages/nav" %>

	<%= yield %>
    
    <div class="container-fluid content-last"></div>
    <%= render "static_pages/footer" %>
    

</body>
</html>